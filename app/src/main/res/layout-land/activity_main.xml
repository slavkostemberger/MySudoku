<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >


    <LinearLayout
        android:id="@+id/layout_l"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="3"
        android:orientation="vertical"
        >

    <LinearLayout

        android:id="@+id/layout1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/color_black"
        android:orientation="horizontal"
        >

        <GridView
            android:id="@+id/grid_view_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="2dp"
            android:layout_marginLeft="1dp"
            android:layout_marginRight="1dp"
            android:layout_marginTop="2dp"
            android:layout_weight="1"
            android:background="@color/color_black"

            android:columnWidth="4dp"
            android:horizontalSpacing="3px"

            android:numColumns="3"
            android:paddingLeft="3px"
            android:paddingTop="3px"
            android:verticalSpacing="3px"
            />

        <GridView
            android:id="@+id/grid_view_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="2dp"
            android:layout_marginLeft="1dp"
            android:layout_marginRight="1dp"
            android:layout_marginTop="2dp"
            android:layout_weight="1"
            android:background="@color/color_black"

            android:columnWidth="1dp"
            android:horizontalSpacing="3px"

            android:numColumns="3"
            android:paddingLeft="3px"
            android:paddingTop="3px"
            android:verticalSpacing="3px"
            />

        <GridView
            android:id="@+id/grid_view_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="2dp"
            android:layout_marginLeft="1dp"
            android:layout_marginRight="1dp"
            android:layout_marginTop="2dp"
            android:layout_weight="1"
            android:background="@color/color_black"
            android:columnWidth="4dp"

            android:gravity="center"
            android:horizontalSpacing="3px"

            android:numColumns="3"
            android:paddingLeft="3px"
            android:paddingTop="3px"
            android:verticalSpacing="3px"

            />

    </LinearLayout>

    <!-- ========================================================================= -->
    <LinearLayout
        android:id="@+id/layout2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/layout1"
        android:background="@color/color_black"
        android:orientation="horizontal"
        >

        <GridView
            android:id="@+id/grid_view_4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="1dp"
            android:layout_marginLeft="1dp"
            android:layout_marginRight="1dp"
            android:layout_marginTop="1dp"
            android:layout_weight="1"
            android:background="@color/color_black"

            android:columnWidth="4dp"
            android:horizontalSpacing="3px"

            android:numColumns="3"
            android:paddingLeft="3px"
            android:paddingTop="3px"
            android:verticalSpacing="3px"
            />

        <GridView
            android:id="@+id/grid_view_5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="1dp"
            android:layout_marginLeft="1dp"
            android:layout_marginRight="1dp"
            android:layout_marginTop="1dp"
            android:layout_weight="1"
            android:background="@color/color_black"

            android:columnWidth="1dp"
            android:horizontalSpacing="3px"

            android:numColumns="3"
            android:paddingLeft="3px"
            android:paddingTop="3px"
            android:verticalSpacing="3px"
            />

        <GridView
            android:id="@+id/grid_view_6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="1dp"
            android:layout_marginLeft="1dp"
            android:layout_marginRight="1dp"
            android:layout_marginTop="1dp"
            android:layout_weight="1"
            android:background="@color/color_black"
            android:columnWidth="4dp"

            android:gravity="center"
            android:horizontalSpacing="3px"

            android:numColumns="3"
            android:paddingLeft="3px"
            android:paddingTop="3px"
            android:verticalSpacing="3px"
            />

    </LinearLayout>

    <!-- ========================================================================= -->
    <LinearLayout
        android:id="@+id/layout3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/layout2"
        android:background="@color/color_black"
        android:orientation="horizontal"
        >

        <GridView
            android:id="@+id/grid_view_7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="3dp"
            android:layout_marginLeft="1dp"
            android:layout_marginRight="1dp"
            android:layout_marginTop="1dp"
            android:layout_weight="1"
            android:background="@color/color_black"

            android:columnWidth="4dp"
            android:horizontalSpacing="3px"

            android:numColumns="3"
            android:paddingLeft="3px"
            android:paddingTop="3px"
            android:verticalSpacing="3px"
            />

        <GridView
            android:id="@+id/grid_view_8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="3dp"
            android:layout_marginLeft="1dp"
            android:layout_marginRight="1dp"
            android:layout_marginTop="1dp"
            android:layout_weight="1"
            android:background="@color/color_black"

            android:columnWidth="1dp"
            android:horizontalSpacing="3px"

            android:numColumns="3"
            android:paddingLeft="3px"
            android:paddingTop="3px"
            android:verticalSpacing="3px"
            />

        <GridView
            android:id="@+id/grid_view_9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="3dp"
            android:layout_marginLeft="1dp"
            android:layout_marginRight="1dp"
            android:layout_marginTop="1dp"
            android:layout_weight="1"
            android:background="@color/color_black"
            android:columnWidth="4dp"

            android:gravity="center"
            android:horizontalSpacing="3px"

            android:numColumns="3"
            android:paddingLeft="3px"
            android:paddingTop="3px"
            android:verticalSpacing="3px"
            />

    </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_r"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:background="@color/color_white"
        android:orientation="horizontal"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@id/layout_l"
        android:layout_weight="1"

        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Hello World! Hello World! Hello World!"

            />
    </LinearLayout>
</RelativeLayout>
