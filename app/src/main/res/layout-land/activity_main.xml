<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
              android:background="@color/color_black"
              android:orientation="horizontal"
              android:baselineAligned="false"
    >

    <LinearLayout
        android:id="@+id/grid_side"
        android:layout_width="0px"
        android:layout_height="match_parent"
        android:background="@color/color_black"
        android:orientation="vertical"
        android:layout_weight="9"

        >

        <LinearLayout
            android:id="@+id/grid_Line1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/color_black"
            android:orientation="horizontal"
            android:baselineAligned="false"

            >

            <GridView
                android:id="@+id/grid_view_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2dp"
                android:layout_marginLeft="1dp"
                android:layout_marginRight="1dp"
                android:layout_marginTop="2dp"
                android:background="@color/color_black"

                android:columnWidth="4dp"
                android:horizontalSpacing="3px"

                android:numColumns="3"
                android:paddingLeft="3px"
                android:paddingTop="3px"
                android:verticalSpacing="3px"
                android:layout_weight="1"
                />

            <GridView
                android:id="@+id/grid_view_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2dp"
                android:layout_marginLeft="1dp"
                android:layout_marginRight="1dp"
                android:layout_marginTop="2dp"
                android:background="@color/color_black"

                android:columnWidth="1dp"
                android:horizontalSpacing="3px"

                android:numColumns="3"
                android:paddingLeft="3px"
                android:paddingTop="3px"
                android:verticalSpacing="3px"
                android:layout_weight="1"
                />

            <GridView
                android:id="@+id/grid_view_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2dp"
                android:layout_marginLeft="1dp"
                android:layout_marginRight="1dp"
                android:layout_marginTop="2dp"
                android:background="@color/color_black"
                android:columnWidth="4dp"

                android:gravity="center"
                android:horizontalSpacing="3px"

                android:numColumns="3"
                android:paddingLeft="3px"
                android:paddingTop="3px"
                android:verticalSpacing="3px"
                android:layout_weight="1"

                />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/grid_Line2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/color_black"
            android:columnCount="0"
            android:orientation="horizontal"
            android:rowCount="3"
            >

            <GridView
                android:id="@+id/grid_view_4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="1dp"
                android:layout_marginLeft="1dp"
                android:layout_marginRight="1dp"
                android:layout_marginTop="1dp"

                android:background="@color/color_black"

                android:columnWidth="4dp"
                android:horizontalSpacing="3px"
                android:numColumns="3"
                android:paddingLeft="3px"
                android:paddingTop="3px"
                android:verticalSpacing="3px"
                android:layout_weight="1"
                />

            <GridView
                android:id="@+id/grid_view_5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="1dp"
                android:layout_marginLeft="1dp"
                android:layout_marginRight="1dp"
                android:layout_marginTop="1dp"
                android:background="@color/color_black"

                android:columnWidth="1dp"
                android:horizontalSpacing="3px"

                android:numColumns="3"
                android:paddingLeft="3px"
                android:paddingTop="3px"
                android:verticalSpacing="3px"
                android:layout_weight="1"
                />

            <GridView
                android:id="@+id/grid_view_6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="1dp"
                android:layout_marginLeft="1dp"
                android:layout_marginRight="1dp"
                android:layout_marginTop="1dp"
                android:background="@color/color_black"
                android:columnWidth="4dp"

                android:gravity="center"
                android:horizontalSpacing="3px"

                android:numColumns="3"
                android:paddingLeft="3px"
                android:paddingTop="3px"
                android:verticalSpacing="3px"
                android:layout_weight="1"
                />

        </LinearLayout>


                <LinearLayout
                    android:id="@+id/grid_Line3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/color_black"
                    android:columnCount="0"
                    android:orientation="horizontal"
                    android:rowCount="3"
                    >

                    <GridView
                        android:id="@+id/grid_view_7"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_column="0"
                        android:layout_marginBottom="3dp"
                        android:layout_marginLeft="1dp"
                        android:layout_marginRight="1dp"
                        android:layout_marginTop="1dp"

                        android:background="@color/color_black"

                        android:columnWidth="4dp"
                        android:horizontalSpacing="3px"
                        android:numColumns="3"
                        android:paddingLeft="3px"
                        android:paddingTop="3px"
                        android:verticalSpacing="3px"
                        android:layout_weight="1"
                        />

                    <GridView
                        android:id="@+id/grid_view_8"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="3dp"
                        android:layout_marginLeft="1dp"
                        android:layout_marginRight="1dp"
                        android:layout_marginTop="1dp"
                        android:background="@color/color_black"

                        android:columnWidth="1dp"
                        android:horizontalSpacing="3px"

                        android:numColumns="3"
                        android:paddingLeft="3px"
                        android:paddingTop="3px"
                        android:verticalSpacing="3px"
                        android:layout_weight="1"
                        />

                    <GridView
                        android:id="@+id/grid_view_9"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="3dp"
                        android:layout_marginLeft="1dp"
                        android:layout_marginRight="1dp"
                        android:layout_marginTop="1dp"
                        android:background="@color/color_black"
                        android:columnWidth="4dp"

                        android:gravity="center"
                        android:horizontalSpacing="3px"

                        android:numColumns="3"
                        android:paddingLeft="3px"
                        android:paddingTop="3px"
                        android:verticalSpacing="3px"
                        android:layout_weight="1"
                        />


                </LinearLayout>


    </LinearLayout>

    <!-- Note to Self:
            For the following to work, create a dimens.xml file in directory values-land
            for the following values:
                key_width     = 50dp - same as portrait
                key_height    = 50dp - a bit smaller than in portrait mode
                key_margin    = 2dp  - same as portrait
                key_text_size = 14dp - same as portrait
            this allows all the keys to fit in the available space

            Question: Will this work on a tablet?
                      Will need to test this somehow

      -->
    <LinearLayout
        android:id="@+id/keypad_side"
        android:layout_width="0px"
        android:layout_height="match_parent"
        android:layout_weight="7"
        android:background="@drawable/keyboard_background"
        android:gravity="center"
        android:orientation="horizontal"

        >

        <GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:columnCount="5"
                    android:rowCount="4"
            >

            <TextView
                android:id="@+id/key_undo"
                android:layout_width="@dimen/key_width"
                android:layout_height="@dimen/key_height"
                android:layout_margin="@dimen/key_margin"
                android:background="@drawable/key_gray"
                android:clickable="true"
                android:gravity="center"
                android:text="Undo"
                android:textSize="@dimen/key_text_size"
                />

            <TextView
                android:id="@+id/key_1"
                android:layout_width="@dimen/key_width"
                android:layout_height="@dimen/key_height"
                android:layout_margin="@dimen/key_margin"
                android:background="@drawable/key_blue"
                android:clickable="true"
                android:gravity="center"
                android:text="1"
                android:textSize="@dimen/key_text_size"
                />

            <TextView
                android:id="@+id/key_2"
                android:layout_width="@dimen/key_width"
                android:layout_height="@dimen/key_height"
                android:layout_margin="@dimen/key_margin"
                android:background="@drawable/key_blue"
                android:clickable="true"
                android:gravity="center"
                android:text="2"
                android:textSize="@dimen/key_text_size"
                />

            <TextView
                android:id="@+id/key_3"
                android:layout_width="@dimen/key_width"
                android:layout_height="@dimen/key_height"
                android:layout_margin="@dimen/key_margin"
                android:background="@drawable/key_blue"
                android:clickable="true"
                android:gravity="center"
                android:text="3"
                android:textSize="@dimen/key_text_size"
                />

            <TextView
                android:id="@+id/key_redo"
                android:layout_width="@dimen/key_width"
                android:layout_height="@dimen/key_height"
                android:layout_column="0"
                android:layout_margin="@dimen/key_margin"
                android:layout_row="1"
                android:background="@drawable/key_gray"
                android:clickable="true"
                android:gravity="center"
                android:text="Redo"
                android:textSize="@dimen/key_text_size"
                />

            <TextView
                android:id="@+id/key_4"
                android:layout_width="@dimen/key_width"
                android:layout_height="@dimen/key_height"
                android:layout_margin="@dimen/key_margin"
                android:background="@drawable/key_blue"
                android:clickable="true"
                android:gravity="center"
                android:text="4"
                android:textSize="@dimen/key_text_size"
                />

            <TextView
                android:id="@+id/key_5"
                android:layout_width="@dimen/key_width"
                android:layout_height="@dimen/key_height"
                android:layout_margin="@dimen/key_margin"
                android:background="@drawable/key_blue"
                android:clickable="true"
                android:gravity="center"
                android:text="5"
                android:textSize="@dimen/key_text_size"
                />

            <TextView
                android:id="@+id/key_6"
                android:layout_width="@dimen/key_width"
                android:layout_height="@dimen/key_height"
                android:layout_margin="@dimen/key_margin"
                android:background="@drawable/key_blue"
                android:clickable="true"
                android:gravity="center"
                android:text="6"
                android:textSize="@dimen/key_text_size"
                />

            <TextView
                android:id="@+id/key_inv"
                android:layout_width="@dimen/key_width"
                android:layout_height="@dimen/key_height"
                android:layout_column="0"
                android:layout_margin="@dimen/key_margin"
                android:layout_row="2"
                android:background="@drawable/key_blue"
                android:clickable="true"
                android:gravity="center"
                android:text="Inv"
                android:textSize="@dimen/key_text_size"
                />


            <TextView
                android:id="@+id/key_7"
                android:layout_width="@dimen/key_width"
                android:layout_height="@dimen/key_height"
                android:layout_margin="@dimen/key_margin"
                android:background="@drawable/key_blue"
                android:clickable="true"
                android:gravity="center"
                android:text="7"
                android:textSize="@dimen/key_text_size"
                />

            <TextView
                android:id="@+id/key_8"
                android:layout_width="@dimen/key_width"
                android:layout_height="@dimen/key_height"
                android:layout_margin="@dimen/key_margin"
                android:background="@drawable/key_blue"
                android:clickable="true"
                android:gravity="center"
                android:text="8"
                android:textSize="@dimen/key_text_size"
                />

            <TextView
                android:id="@+id/key_9"
                android:layout_width="@dimen/key_width"
                android:layout_height="@dimen/key_height"
                android:layout_margin="@dimen/key_margin"
                android:background="@drawable/key_blue"
                android:clickable="true"
                android:gravity="center"
                android:text="9"
                android:textSize="@dimen/key_text_size"
                />

            <TextView
                android:id="@+id/key_c"
                android:layout_width="@dimen/key_width"
                android:layout_height="@dimen/key_height"
                android:layout_margin="@dimen/key_margin"
                android:background="@drawable/key_blue"
                android:clickable="true"
                android:gravity="center"
                android:text="C"
                android:textSize="@dimen/key_text_size"
                />

            <TextView
                android:id="@+id/key_menu"
                android:layout_width="@dimen/key_width"
                android:layout_height="@dimen/key_height"
                android:layout_margin="@dimen/key_margin"
                android:layout_column="2"
                android:layout_row="3"
                android:background="@drawable/key_blue"
                android:clickable="true"
                android:gravity="center"
                android:text="Menu"
                android:textSize="@dimen/key_text_size"
                />

        </GridLayout>
    </LinearLayout>

</LinearLayout>