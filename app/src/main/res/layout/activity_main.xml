<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"

    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <LinearLayout
        android:id="@+id/layout1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/color_black"
        android:orientation="horizontal"
        >
    <!-- Notes to self:
            1) the layout margins are set up to create thicker lines btween each 2 x 3 block
            2) the layout gives the first Gridview ALL the spce unless layoutWidth = "1" is set
    -->
        <GridView
            android:id="@+id/grid_view_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="2dp"
            android:layout_marginLeft="1dp"
            android:layout_marginRight="1dp"
            android:layout_marginTop="2dp"
            android:layout_weight="1"
            android:background="@color/color_black"

            android:columnWidth="4dp"
            android:horizontalSpacing="3px"

            android:numColumns="3"
            android:paddingLeft="3px"
            android:paddingTop="3px"
            android:verticalSpacing="3px"
            />

        <GridView
            android:id="@+id/grid_view_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="2dp"
            android:layout_marginLeft="1dp"
            android:layout_marginRight="1dp"
            android:layout_marginTop="2dp"
            android:layout_weight="1"
            android:background="@color/color_black"

            android:columnWidth="1dp"
            android:horizontalSpacing="3px"

            android:numColumns="3"
            android:paddingLeft="3px"
            android:paddingTop="3px"
            android:verticalSpacing="3px"
            />

        <GridView
            android:id="@+id/grid_view_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="2dp"
            android:layout_marginLeft="1dp"
            android:layout_marginRight="1dp"
            android:layout_marginTop="2dp"
            android:layout_weight="1"
            android:background="@color/color_black"
            android:columnWidth="4dp"

            android:gravity="center"
            android:horizontalSpacing="3px"

            android:numColumns="3"
            android:paddingLeft="3px"
            android:paddingTop="3px"
            android:verticalSpacing="3px"

            />

    </LinearLayout>

    <!-- ========================================================================= -->
    <LinearLayout
        android:id="@+id/layout2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/layout1"
        android:background="@color/color_black"
        android:orientation="horizontal"
        >

        <GridView
            android:id="@+id/grid_view_4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="1dp"
            android:layout_marginLeft="1dp"
            android:layout_marginRight="1dp"
            android:layout_marginTop="1dp"
            android:layout_weight="1"
            android:background="@color/color_black"

            android:columnWidth="4dp"
            android:horizontalSpacing="3px"

            android:numColumns="3"
            android:paddingLeft="3px"
            android:paddingTop="3px"
            android:verticalSpacing="3px"
            />

        <GridView
            android:id="@+id/grid_view_5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="1dp"
            android:layout_marginLeft="1dp"
            android:layout_marginRight="1dp"
            android:layout_marginTop="1dp"
            android:layout_weight="1"
            android:background="@color/color_black"

            android:columnWidth="1dp"
            android:horizontalSpacing="3px"

            android:numColumns="3"
            android:paddingLeft="3px"
            android:paddingTop="3px"
            android:verticalSpacing="3px"
            />

        <GridView
            android:id="@+id/grid_view_6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="1dp"
            android:layout_marginLeft="1dp"
            android:layout_marginRight="1dp"
            android:layout_marginTop="1dp"
            android:layout_weight="1"
            android:background="@color/color_black"
            android:columnWidth="4dp"

            android:gravity="center"
            android:horizontalSpacing="3px"

            android:numColumns="3"
            android:paddingLeft="3px"
            android:paddingTop="3px"
            android:verticalSpacing="3px"
            />

    </LinearLayout>

    <!-- ========================================================================= -->
    <LinearLayout
        android:id="@+id/layout3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/layout2"
        android:background="@color/color_black"
        android:orientation="horizontal"
        >

        <GridView
            android:id="@+id/grid_view_7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="3dp"
            android:layout_marginLeft="1dp"
            android:layout_marginRight="1dp"
            android:layout_marginTop="1dp"
            android:layout_weight="1"
            android:background="@color/color_black"

            android:columnWidth="4dp"
            android:horizontalSpacing="3px"

            android:numColumns="3"
            android:paddingLeft="3px"
            android:paddingTop="3px"
            android:verticalSpacing="3px"
            />

        <GridView
            android:id="@+id/grid_view_8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="3dp"
            android:layout_marginLeft="1dp"
            android:layout_marginRight="1dp"
            android:layout_marginTop="1dp"
            android:layout_weight="1"
            android:background="@color/color_black"

            android:columnWidth="1dp"
            android:horizontalSpacing="3px"

            android:numColumns="3"
            android:paddingLeft="3px"
            android:paddingTop="3px"
            android:verticalSpacing="3px"
            />

        <GridView
            android:id="@+id/grid_view_9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="3dp"
            android:layout_marginLeft="1dp"
            android:layout_marginRight="1dp"
            android:layout_marginTop="1dp"
            android:layout_weight="1"
            android:background="@color/color_black"
            android:columnWidth="4dp"

            android:gravity="center"
            android:horizontalSpacing="3px"

            android:numColumns="3"
            android:paddingLeft="3px"
            android:paddingTop="3px"
            android:verticalSpacing="3px"
            />

    </LinearLayout>

    <FrameLayout
        android:id="@+id/kb_container"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:layout_below="@id/layout3"
        android:background="@drawable/keyboard_background"
        >

        <GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:columnCount="5"
                    android:rowCount="4"
            >

            <TextView
                android:id="@+id/key_undo"
                android:layout_width="@dimen/key_width"
                android:layout_height="@dimen/key_height"
                android:layout_margin="@dimen/key_margin"
                android:background="@drawable/key_gray"
                android:clickable="true"
                android:gravity="center"
                android:text="Undo"
                />

            <TextView
                android:id="@+id/key_1"
                android:layout_width="@dimen/key_width"
                android:layout_height="@dimen/key_height"
                android:layout_margin="@dimen/key_margin"
                android:background="@drawable/key_blue"
                android:clickable="true"
                android:gravity="center"
                android:text="1"
                />

            <TextView
                android:id="@+id/key_2"
                android:layout_width="@dimen/key_width"
                android:layout_height="@dimen/key_height"
                android:layout_margin="@dimen/key_margin"
                android:background="@drawable/key_blue"
                android:clickable="true"
                android:gravity="center"
                android:text="2"
                />

            <TextView
                android:id="@+id/key_3"
                android:layout_width="@dimen/key_width"
                android:layout_height="@dimen/key_height"
                android:layout_margin="@dimen/key_margin"
                android:background="@drawable/key_blue"
                android:clickable="true"
                android:gravity="center"
                android:text="3"
                />

            <TextView
                android:id="@+id/key_redo"
                android:layout_width="@dimen/key_width"
                android:layout_height="@dimen/key_height"
                android:layout_column="0"
                android:layout_margin="@dimen/key_margin"
                android:layout_row="1"
                android:background="@drawable/key_gray"
                android:clickable="true"
                android:gravity="center"
                android:text="Redo"
                />

            <TextView
                android:id="@+id/key_4"
                android:layout_width="@dimen/key_width"
                android:layout_height="@dimen/key_height"
                android:layout_margin="@dimen/key_margin"
                android:background="@drawable/key_blue"
                android:clickable="true"
                android:gravity="center"
                android:text="4"
                />

            <TextView
                android:id="@+id/key_5"
                android:layout_width="@dimen/key_width"
                android:layout_height="@dimen/key_height"
                android:layout_margin="@dimen/key_margin"
                android:background="@drawable/key_blue"
                android:clickable="true"
                android:gravity="center"
                android:text="5"
                />

            <TextView
                android:id="@+id/key_6"
                android:layout_width="@dimen/key_width"
                android:layout_height="@dimen/key_height"
                android:layout_margin="@dimen/key_margin"
                android:background="@drawable/key_blue"
                android:clickable="true"
                android:gravity="center"
                android:text="6"
                />

            <TextView
                android:id="@+id/key_inv"
                android:layout_width="@dimen/key_width"
                android:layout_height="@dimen/key_height"
                android:layout_margin="@dimen/key_margin"
                android:layout_column="0"
                android:layout_row="2"
                android:background="@drawable/key_blue"
                android:clickable="true"
                android:gravity="center"
                android:text="Inv"
                />


            <TextView
                android:id="@+id/key_7"
                android:layout_width="@dimen/key_width"
                android:layout_height="@dimen/key_height"
                android:layout_margin="@dimen/key_margin"
                android:background="@drawable/key_blue"
                android:clickable="true"
                android:gravity="center"
                android:text="7"
                />

            <TextView
                android:id="@+id/key_8"
                android:layout_width="@dimen/key_width"
                android:layout_height="@dimen/key_height"
                android:layout_margin="@dimen/key_margin"
                android:background="@drawable/key_blue"
                android:clickable="true"
                android:gravity="center"
                android:text="8"
                />

            <TextView
                android:id="@+id/key_9"
                android:layout_width="@dimen/key_width"
                android:layout_height="@dimen/key_height"
                android:background="@drawable/key_blue"
                android:clickable="true"
                android:gravity="center"
                android:text="9"
                />

            <TextView
                android:id="@+id/key_c"
                android:layout_width="@dimen/key_width"
                android:layout_height="@dimen/key_height"
                android:background="@drawable/key_blue"
                android:clickable="true"
                android:gravity="center"
                android:text="C"
                />

            <TextView
                android:id="@+id/key_menu"
                android:layout_width="@dimen/key_width"
                android:layout_height="@dimen/key_height"
                android:layout_column="2"
                android:layout_row="3"
                android:background="@drawable/key_blue"
                android:clickable="true"
                android:gravity="center"
                android:text="Menu"
                />

        </GridLayout>
        <!--
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="?android:attr/selectableItemBackground"
                android:text="Hello World!"
                />
        -->
    </FrameLayout>
</RelativeLayout>
